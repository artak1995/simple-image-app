= simple_form_for @comment, html: { multipart: true } do |f|
  - if @comment.errors.any?
    #errors
      %h2
      = pluralize(@comment.errors.count, 'error')
      prevented this comment from saving
      %ul
        - @comment.errors.full_message.each  do |msg|
          %li = msg

  .form-group
    = f.input :content, input_html: { class: 'form-control' }
    = f.hidden_field :pic_id, value: params[:pic_id]


  = f.button :submit, clsas: 'btn btn-info'