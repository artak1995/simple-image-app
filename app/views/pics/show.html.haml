= image_tag @pic.image.url(:large)
%h1= 'Title: ' + @pic.title
%h3= 'Description: ' + @pic.description
%h3= 'Picture uploader: ' + @pic.user.email

- @comments.each do |comment|
  %h6= 'Comment: ' + comment.content


=link_to 'Add Comment', new_comment_path(:pic_id => @pic.id),:controller => 'comments'
=link_to 'Back', root_path
=link_to 'Edit', edit_pic_path
=link_to 'Delete', pic_path, method: :delete, data: { confirm: 'Are you sure?'}